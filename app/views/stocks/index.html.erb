<h1>Listing Stocks</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Company name</th>
      <th>Ticker</th>
      <th>Current price</th>
      <th>Company Worth</th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
    <% if stock.user_id == current_user.id %>
   <% begin %>
    <% @stock_quote = StockQuote::Stock.quote(stock.ticker) %>
     <% rescue StandardError %>
     <<tr>
            <td><%= link_to "N/A", stock %></td>
            <td><%= "N/A" %></td>
            <td><%= stock.ticker %></td>
            <td><%= "error" %></td>
            <td><%= "error" %></td>
          </tr>
          <% next %>
     <% end %>
     
          <tr>
            <td><%= link_to @stock_quote.name, stock %></td>
            <td><%= stock.ticker %></td> 
            <td><%= @stock_quote.l %></td> 
            <td><%= @stock_quote.mc %></td> 
          </tr>
       <% end %>
    <% end %>
  </tbody>
</table>

<br/>

 <%= link_to 'New Stock', new_stock_path, class: "btn btn-default"%>

 <br/><br/>

<%= form_tag home_path, :method => 'POST' do %>
<div class = "form-group">
<%= text_field_tag 'id', nil, placeholder: "Enter Company Ticker Symbol", size: 50, class: 'form-control' %>
<br/>
<%= submit_tag 'Lookup stock quote', class: "btn btn-info" %>
</div>
<% end %>