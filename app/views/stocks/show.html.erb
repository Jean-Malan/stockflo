
  <% begin %>
  <% @stock_quote = StockQuote::Stock.quote(@stock.ticker) %>
   <% rescue StandardError %>
   <% end %>


<div class="panel panel-default">
  
  <div class="panel-heading"> <strong> <%= @stock_quote.name  %> - <%= @stock_quote.symbol  %> </strong><br/> </div>
  <div class="panel-body">
    <div class = "col-md-4">
    <font color= "#333333">
      <h1>$<%= @stock_quote.l  %></h1><br/></font>
       <strong> <font color= "#333333">Earnings Per Share: </strong><%= @stock_quote.eps  %><br/></font>
        <strong><font color= "#333333"> Price/Earnings Ratio: </strong><%= @stock_quote.pe  %><br/></font>
         <strong><font color= "#333333">Market Cap: </strong><%= @stock_quote.mc  %><br/></font>
          <strong><font color= "#333333">Stock Open: </strong><%= @stock_quote.op  %><br/></font>
          <strong><font color= "#333333">Day's Range:  </strong><%= @stock_quote.lo  %><br/></font>
          <strong><font color= "#333333">Year High: </strong><%= @stock_quote.hi52  %><br/></font>
          <strong><font color= "#333333"> Year Low: </strong><%= @stock_quote.lo52  %></font><br/>
          </div>
         
         <div class= "col-md-8">
           <br/>
        <p align="justify"><font color= "#333333"> <%= @stock_quote.summary[0]["overview"] %></font></p>
          </div> 
  </div>
  </font>

  <div class="panel-footer"><%= link_to 'Edit', edit_stock_path(@stock), class: "btn btn-default"%> 
<%= link_to 'Back', stocks_path, class: "btn btn-default" %> 
<%= link_to 'Remove stock', stock_path(@stock), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %>
</div>
</div>


<br/><br/>

