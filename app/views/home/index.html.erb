<%= form_tag home_path, :method => 'POST' do %>
<div class = "form-group">
<%= text_field_tag 'id', nil, placeholder: "Enter Company Ticker Symbol", size: 50, class: 'form-control' %>
<br/>
<%= submit_tag 'Lookup stock quote', class: "btn btn-info" %>
</div>
<% end %>


<br/><br/>

<% if @stock %>

     <strong> Comapny Name: </strong><%= @stock.name  %> - <%= @stock.symbol  %><br/> 
      <strong> Current Ask: </strong><%= @stock.l  %><br/>
       <strong> Earnings Per Share: </strong><%= @stock.eps  %><br/>
        <strong> Price/Earnings Ratio: </strong><%= @stock.pe  %><br/>
         <strong>Market Cap: </strong><%= @stock.mc  %><br/>
          <strong>Stock Open: </strong><%= @stock.op  %><br/>
          <strong>Day's Range:  </strong><%= @stock.lo  %><br/>
          <strong>Year High: </strong><%= @stock.hi52  %><br/>
          <strong> Year Low: </strong><%= @stock.lo52  %><br/>

 <% elsif @nothing %>
   <%= @nothing %>
 <% end %>

 <% if @error %>
   <%= @error %>
<% end %>

